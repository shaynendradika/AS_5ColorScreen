<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STMIK Pontianak"
        android:background="#244F75"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="25sp"
        android:padding="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KRS Online"
        android:background="#60BFBF"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="25sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perpustakaan"
        android:background="#8C4B7E"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="25sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aset"
        android:background="#F8BB44"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="25sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#F24B4B"
        android:gravity="center"
        android:text="Keuangan"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

</LinearLayout>